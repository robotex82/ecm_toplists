<div id="<%= list_item.class.to_s.underscore %>-<%= list_item.id %>" class="<%= list_item.class.to_s.underscore %>">
  <h2 class="<%= list_item.class.to_s.underscore %>-name"><%= list_item.name %></h2>
  <%= image_tag(list_item.preview_image.url, { :class => "toplist-preview-image" }) if list_item.preview_image? %>
  <p class="<%= list_item.class.to_s.underscore %>-description"><%= list_item.description %></p>
  <% if list_item.link %>
    <p class="<%= list_item.class.to_s.underscore %>-link"><%= link_to list_item.link, list_item.link %></p>  
  <% end %>
  
  <%= link_to t(:more), list_item %>
</div>

